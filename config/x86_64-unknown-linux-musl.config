# Based off of https://github.com/musl-cross/musl-cross under the MIT license.
CT_CONFIG_VERSION="4"
CT_EXPERIMENTAL=y
# CT_LOG_PROGRESS_BAR is not set
CT_ARCH_X86=y
CT_MULTILIB=y
CT_ARCH_64=y
CT_KERNEL_LINUX=y
CT_BINUTILS_LINKER_LD_GOLD=y
CT_BINUTILS_GOLD_THREADS=y
CT_BINUTILS_LD_WRAPPER=y
CT_BINUTILS_PLUGINS=y
CT_LIBC_MUSL=y
CT_CC_LANG_CXX=y

CT_CC_GCC_ENABLE_DEFAULT_PIE=y
CT_CC_GCC_EXTRA_CONFIG_ARRAY="--enable-default-pie"

CT_ALLOW_BUILD_AS_ROOT=y
CT_ALLOW_BUILD_AS_ROOT_SURE=y
CT_PREFIX_DIR="/tmp/toolchain/${CT_TARGET}"

CT_OMIT_TARGET_VENDOR=y
CT_TARGET_VENDOR="unknown"

# Versioning
CT_GCC_V_12=y
CT_GCC_VERSION="12.3.0"
CT_BINUTILS_V_2_40=y
CT_BINUTILS_VERSION="2.40"
CT_MUSL_V_1_2_4=y
CT_MUSL_VERSION="1.2.4"
CT_LINUX_V_5_4=y
CT_LINUX_VERSION="5.4.248"
